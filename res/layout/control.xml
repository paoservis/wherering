<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/txt" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button android:text="startup" android:id="@+id/startup"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <Button android:text="shutdown" android:id="@+id/shutdown"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <CheckBox android:id="@+id/initd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="run at startup" />
    <Button android:id="@+id/alert" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="alert" />
</LinearLayout>
